<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emmt.awiditeminventory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" >
    </uses-permission>
    <!-- 在SDCard中創建與刪除檔許可權 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard寫入資料許可權 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.emmt.awiditeminventory.GlobalVariable"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ExpandAvtivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.emmt.awiditeminventory.DataBuilderActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="InventoryActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="PowerLevelActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="CameraViewActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="FileManager"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ImageViewScaleActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="OfficeWebActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="AddNewItemTabActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="UpdateItemTabActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="InventoryExistedTagActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PowerSettingActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
